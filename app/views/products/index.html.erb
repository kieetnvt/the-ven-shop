<h1>Recommends</h1>
<div class="row">
  <%= render 'products/headerproduct' %>

    <div class="span9">
          <table>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th>Price</th>
            </tr>

          <% @products.each do |product| %>
            <tr>
              <td><%= image_tag(product.img_small, alt: product.name, class: "gravatar") %></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>  
              <td><%= link_to 'Show', product %></td>

              <% @user = current_user %>
              <% if @user.present? %>
                <% if current_user.admin? %>
                <td><%= link_to 'Edit', edit_product_path(product) %></td>
                <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <% end %>
              <% end %>

              <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
            </tr>
          <% end %>
          </table>
          <br />
    </div>

    <%= will_paginate @products %>
</div>


