<h1>Listing searches</h1>

<div class="span9">
          <table>
            <tr>
              <th>Name</th>
              <th>Price</th>
            </tr>

          <% @searches.each do |product| %>
            <tr>
              <td><%= product["name"] %></td>
              <td><%= product["price"] %></td>  
              <td><%= button_to 'Add to Cart', line_items_path(product_id: product["id"]) %></td>
              <td>
                <% @user = current_user %>
                <% if @user.present? %>
                <% if @user.admin == true %>
                <%= link_to 'Edit', edit_product_path(product) %>'
                <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
                <% end %>
              </td>

            </tr>
          <% end %>
          </table>

          <%= will_paginate @pages %>

    </div>

