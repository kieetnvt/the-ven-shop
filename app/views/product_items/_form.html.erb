<%= simple_form_for(@product_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :product_id %>
    <%= f.input :order_id %>
    <%= f.input :quantity %>
    <%= f.input :total_price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
