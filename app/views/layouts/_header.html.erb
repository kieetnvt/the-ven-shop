<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "sample app", home_path, id: "logo" %>
      <div id="search">             
        <form class="form-search pull-left" id="headersearch" action="<%= searches_path %>">
        <div class="input-append">
        <input type="text" class="search-query" placeholder="Search something here" name="search">
        <button type="submit" class="btn" id="searchbutton"><i class="icon-search"></i></button>
        </div>
      </form>
          </div>
      <nav>
        <ul class="nav pull-right">          
          <li><%= link_to "Home",    home_path %></li>
          <li><%= link_to "Products", products_path %></li>
          
          <% if signed_in? %>
          <% @user = current_user %>

          
          <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          <li><%= link_to "New Cart", cart_new_path %></li>
          <li><%= link_to "All Users", listuser_path %></li>

          <li><%= link_to @user.name, current_user %></li>
          <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
